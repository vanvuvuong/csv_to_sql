# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

# overwrite .editorconfig for the yaml config folder
[config/*.yaml]
indent_style = space
indent_size = 2
